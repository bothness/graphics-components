{
	"name": "@onsvisual/svelte-components",
	"version": "1.0.0-next.8",
	"scripts": {
		"dev": "vite dev",
		"build": "npm run build:package && npm run build:docs",
		"build:package": "vite build && npm run prepack && node ./scripts/css-merge.js",
		"preview": "vite preview",
		"deploy": "gh-pages -d storybook-static -t",
		"prepare": "svelte-kit sync || echo ''",
		"prepack": "svelte-kit sync && svelte-package && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run",
		"storybook": "storybook dev -p 6006",
		"build:docs": "storybook build && touch ./storybook-static/.nojekyll"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		},
		"./css/main.css": "./dist/css/main.css"
	},
	"peerDependencies": {
		"parse-color": "^1.0.0",
		"pym.js": "^1.3.2",
		"svelte": "3 - 5"
	},
	"devDependencies": {
		"@chromatic-com/storybook": "^4.0.0",
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@onsvisual/svelte-charts": "^0.4.0",
		"@storybook/addon-a11y": "^9.0.11",
		"@storybook/addon-docs": "^9.0.11",
		"@storybook/addon-svelte-csf": "^5.0.3",
		"@storybook/addon-vitest": "^9.0.11",
		"@storybook/sveltekit": "^9.0.11",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/package": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/svelte": "^5.2.4",
		"@types/node": "^20",
		"@vitest/browser": "3.2.3",
		"@vitest/coverage-v8": "3.2.3",
		"csso": "^5.0.5",
		"d3-scale": "^4.0.2",
		"d3-shape": "^3.2.0",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-storybook": "^9.0.11",
		"eslint-plugin-svelte": "^3.0.0",
		"gh-pages": "^6.3.0",
		"globals": "^16.0.0",
		"jsdom": "^26.0.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"publint": "^0.3.2",
		"storybook": "^9.0.11",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"typescript": "^5.0.0",
		"vite": "^6.2.6",
		"vitest": "^3.2.3"
	},
	"keywords": [
		"svelte"
	]
}
